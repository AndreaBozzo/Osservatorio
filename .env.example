# Osservatorio ISTAT Data Platform - Environment Configuration Template
# Copy this file to .env and configure your settings

# =============================================================================
# Application Settings
# =============================================================================
OSSERVATORIO_ENV=development
OSSERVATORIO_LOG_LEVEL=INFO
OSSERVATORIO_DEBUG=true

# =============================================================================
# Database Configuration
# =============================================================================
# SQLite (primary metadata storage)
DATABASE_URL=sqlite:///data/databases/osservatorio_metadata.db

# DuckDB (analytics and time series data)
DUCKDB_URL=data/databases/osservatorio.duckdb

# =============================================================================
# API Configuration (Day 6: Centralized Configuration)
# =============================================================================
API_BASE_URL=http://localhost:8000
API_TIMEOUT=30
API_MAX_CONNECTIONS=100

# CORS settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:8501"]

# =============================================================================
# Authentication & Security (Day 5: Security Standardization)
# =============================================================================
# JWT configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Key configuration
API_KEY_PREFIX=oistat_
DEFAULT_RATE_LIMIT=100

# Circuit breaker configuration (Day 6: Centralized Configuration)
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# =============================================================================
# External APIs
# =============================================================================
# ISTAT API configuration
ISTAT_API_BASE_URL=https://sdmx.istat.it/SDMXWS/rest/
ISTAT_API_TIMEOUT=60
ISTAT_API_RATE_LIMIT=10

# PowerBI Configuration
POWERBI_CLIENT_ID=your-azure-app-client-id
POWERBI_CLIENT_SECRET=your-azure-app-client-secret
POWERBI_TENANT_ID=your-azure-tenant-id
POWERBI_WORKSPACE_ID=your-powerbi-workspace-id

# Tableau Configuration (optional)
TABLEAU_SERVER_URL=https://your-tableau-server.com
TABLEAU_USERNAME=your-tableau-username
TABLEAU_PASSWORD=your-tableau-password
TABLEAU_SITE_ID=your-site-id

# =============================================================================
# Cache and Performance (Day 6: Configuration Centralization)
# =============================================================================
# Redis configuration
REDIS_URL=redis://localhost:6379/0

# Cache settings
ENABLE_CACHE=true
CACHE_TTL=3600

# Performance thresholds
QUERY_MAX_TIME_MS=5000
BULK_INSERT_MAX_TIME_MS=10000
API_RESPONSE_MAX_TIME_MS=2000

# Batch processing configuration
DEFAULT_BATCH_SIZE=1000
DEFAULT_CONCURRENCY_LEVEL=4

# =============================================================================
# Logging and Monitoring
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/osservatorio.log
LOG_SQL_QUERIES=false
LOG_API_REQUESTS=true

# =============================================================================
# Development and Testing
# =============================================================================
TEST_DATABASE_URL=sqlite:///data/databases/test_osservatorio.db
USE_MOCK_DATA=false

# =============================================================================
# File Processing
# =============================================================================
TEMP_FILE_RETENTION_HOURS=24
MAX_UPLOAD_SIZE_MB=50
SUPPORTED_FORMATS=["xml", "csv", "json", "xlsx"]
